        }

        p {
            font-size: 1.4rem;
            color: #bbb; /* Lighter text color */
            margin-bottom: 2rem;
        }

        .cta-button {
            display: inline-block;
            padding: 15px 30px;
            font-size: 1.4rem;
            font-weight: bold;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            border-radius: 8px;
            background-color: #4caf50; /* Green color often associated with success */
            color: #fff;
            transition: background-color 0.3s ease;
        }

            .cta-button:hover {
