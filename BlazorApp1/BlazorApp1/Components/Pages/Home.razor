            }

        .features-section {
            background-color: #333; /* Dark background for feature section */
            padding: 4rem 0;
            text-align: center;
        }

        .feature {
            margin-bottom: 2rem;
        }

        .feature-image-container {
            max-width: 50%; /* Set a maximum width for the container */
            margin: 0 auto; /* Center the container horizontally */
        }

        .feature-image {
            width: 20%; /* Ensure the image fills the container */
            height: auto;
        }

        .feature h2 {
            font-size: 2rem;
            margin-top: 1rem;
            color: #4caf50; /* Green color for feature headings */
        }

        .feature p {
            color: #bbb; /* Lighter text color */
        }

        footer {
            background-color: #222; /* Darker background for the footer */
            color: #fff;
            text-align: center;
            padding: 2rem 0;
        }

        p.slogan {
            font-size: 1.8rem;
            font-family: 'Arial', sans-serif; /* Use a common sans-serif font for the slogan */
            color: #bbb; /* Lighter text color */
            margin-bottom: 1.5rem;
        }
    </style>
</head>

